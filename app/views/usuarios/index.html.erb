<div class="center jumbotron">

<p id="notice"><%= notice %></p>


<h1>Todos los usuarios de Photolog</h1>

<table align="center">
  <thead>
    <tr>
      <th>Nick</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Email</th>
      <th>Tipo usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.nick %></td>
        <td><%= usuario.nombre %></td>
        <td><%= usuario.apellido %></td>
        <td><%= usuario.email %></td>
        <td>
           <% if usuario.tipo_usuario == 0 %>
          Normal
           <%end%>
           <% if usuario.tipo_usuario == 1 %>
          Gold
           <%end%>
           <% if usuario.tipo_usuario == 2 %>
          Administrador
           <%end%>
       </td>
        <td><%= link_to 'Eliminar cuenta', usuario, method: :delete, data: { confirm: 'estas seguro?' } %></td>
        <td><%= link_to 'Editar', edit_usuario_path(usuario) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
