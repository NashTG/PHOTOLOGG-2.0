<div class="center jumbotron">

<%= form_for(@usuario) do |f| %>
  <% if @usuario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@usuario.errors.count, "error") %> prohibited this usuario from being saved:</h2>

      <ul>
      <% @usuario.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="form">
    <%= f.label :nick %><br>
    <%= f.text_field :nick,class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre,class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :apellido %><br>
    <%= f.text_field :apellido ,class:"form-control"%>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email ,class:"form-control"%>
  </div>
  <div class="field">
    <%= f.label :contrasena %><br>
    <%= f.password_field :contrasena ,class:"form-control"%>
  </div>
<%if current_usuario.tipo_usuario == 2%>

  <div class="field">
    0 - Normal | 1 - Gold | 2 - Admin <br>
    <%= f.label :tipo_usuario %><br>
    <%= f.number_field :tipo_usuario, {min: 0, max: 2} %>
  </div>
<%end%>
  <div class="actions">
    <%= f.submit "Aceptar" %>
  </div>

<% end %>
</div>
